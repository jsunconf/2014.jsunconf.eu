!!!
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')

    title
      block title
        = locals.name
    link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=locals.name)
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Leckerli+One|Open+Sans:400,600,300')
    link(rel='stylesheet', href='/css/main.css')

  body(class=bodyclass)
    header
      .header
        .row
          .small-12.large-4.columns
            a(href='/')
              img.header__logo(src='/images/logo.png', alt='JSUnconf', width='150', height='150')
          .small-12.large-8.columns.text-center
            h3
              | May 10 &amp; 11, 2014 | Hamburg
            
            a.ticket__action.button.large.secondary.radius(href='#') Get your ticket

      nav.menu
        .row
          .small-12.columns.text-center
            a.menu__link(href='/news/') News
            a.menu__link(href='/location/') Location
            a.menu__link(href='/schedule/') Schedule
            a.menu__link(href='/sponsors/') Sponsors
            a.menu__link(href='/about/') About
    
    block content
    
    footer.footer
      block sponsors
        .footer__sponsors
          .row
            .small-12.columns
              h2 Sponsors

            - var sponsors = _.chain(contents.sponsors._.directories).map(function(item) {
            -   return item.index;
            - }).compact().sortBy(function(item) {
            -   return item.name;
            - }).value();

            each sponsor in sponsors
              .small-12.large-6.columns.footer__sponsors__logo.text-center
                a(href=sponsor.metadata.link, title=sponsor.metadata.name)
                  img(src= sponsor.url + sponsor.metadata.logo, alt=sponsor.metadata.name)

      .footer__message
        .row
          .small-12.columns &copy; #{ new Date().getFullYear() } #{ locals.owner }