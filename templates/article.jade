extends layout

block title
  title= page.title + ' – ' + locals.name
  meta(property='og:title', content= page.title + ' – ' + locals.name)

block content
  .row
    .small-12.columns
      article.article
        header.article__header
          h1
            != page.title
            | &nbsp;
            small= moment(page.date).format('MMMM DD YYYY')

        section.article__content!= typogr(page.html).typogrify()
