extends layout

block title
  title= page.title + ' – ' + locals.name
  meta(property='og:title', content= page.title + ' – ' + locals.name)

block content
  .row
    .small-12.columns
      article
        header
          h1!= page.title

        h3.subheader Are you interested in sponsoring the JavaScript Unconference? We are still looking for sponsors!

        .sponsoring
          a(href="/downloads/JSUnconfSponsoranschreibenENHH2014.pdf", onclick="ga('send', 'event', 'download', 'click', 'english');") Sponsorship flyer (english)
          br
          a(href="/downloads/JSUnconfSponsoranschreibenDEHH2014.pdf", onclick="ga('send', 'event', 'download', 'click', 'german');") Sponsorship flyer (german)
          br
          .email
            a(href="mailto:contact@jsunconf.eu") contact@jsunconf.eu

        br
        br

        h3.subheader The JavaScript Unconference would not be possible without the kind support of these companies:

        - var sponsors = _.chain(contents.sponsoring._.directories).map(function(item) {
        -   return item.index;
        - }).compact().sortBy(function(item) {
        -   return item.name;
        - }).value();

        .row
          .small-12.columns
            .sponsor-list
              h3.sponsor-list__title Gold Sponsors

          - var goldSponsors = _.filter(sponsors, function(sponsor) {
          -   return sponsor.metadata.type === 'gold';
          - });

          each sponsor in goldSponsors
            .small-12.columns.sponsor
              .text-center
                a.sponsor__link(href=sponsor.metadata.link, title=sponsor.metadata.name)
                  img.sponsor__logo(src= sponsor.url + 'logo.png', alt=sponsor.metadata.name)
                p
                  br
                  a(href='https://twitter.com/' + sponsor.metadata.twitter, target='_blank')= sponsor.metadata.twitter
                  br
                  a(href=sponsor.metadata.link, target='_blank')= sponsor.metadata.link
              p.sponsor__text!= sponsor.metadata.text

        .row
